xs = 13px
sm = 16px
md = 20px
lg = 24px
xl = 28px

.page
	box-sizing border-box
	height 100vh
	margin 0
	padding 0
	position relative
	overflow hidden

.container
	height: 100vh
	position: absolute
	z-index 1

.loader
	display: flex
	align-items: center
	justify-content: center
	width 100%
	height: 100%
	position: absolute
	background: white
	z-index 3
	animation loader 2s linear forwards

@keyframes loader
	0%
		opacity 1
		visibility: visible
	90%
		opacity 1
		visibility: visible
	100%
		opacity 0
		visibility: hidden

.loader div
	background: yellow
	width: 40px
	height: 40px
	border-radius: 50%
	margin: 20px
	transform scale(0)
	animation scaling 2s ease-in-out infinite

.loader div:nth-child(1)
	animation-delay .2s
.loader div:nth-child(2)
	animation-delay .4s
.loader div:nth-child(3)
	animation-delay .6s

@keyframes scaling
	0%, 100%
		transform scale(0.4)
	40%
		transform scale(0.8)
	50%
		transform scale(1)
